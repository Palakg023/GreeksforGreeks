/* https://practice.geeksforgeeks.org/problems/print-the-pattern-set-1/1 */

// Code --------------------

void printPat(int n)
{
//Your code here
  int k=n;
 
   {
       for(int i=n ;i>=1 ;i--)
       {
           for(int j=n;j>=1 ;j--)
           {
               for(int k=1;k<=i;k++)
               cout<<j;
           }
       }
  cout<<" $";
       k--;
   }
}
